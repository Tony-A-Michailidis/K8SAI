# Environment variables for K8s AI Log Analyzer
# Copy this file to .env and customize for your environment

# Claude AI Configuration
ANTHROPIC_API_KEY=your_claude_api_key_here

# Kubernetes Configuration
KUBECONFIG=~/.kube/config
K8S_CONTEXT=your-cluster-context

# Application Configuration
K8SAI_DEBUG=false
K8SAI_LOG_LEVEL=INFO

# Analysis Configuration
K8SAI_ANALYSIS_BATCH_SIZE=100
K8SAI_ANALYSIS_ANALYSIS_INTERVAL=60
K8SAI_ANALYSIS_MAX_LOG_AGE=3600

# Alert Configuration
K8SAI_ALERTS_ENABLE_CONSOLE_OUTPUT=true
K8SAI_ALERTS_ENABLE_FILE_OUTPUT=true
K8SAI_ALERTS_OUTPUT_DIR=./outputs
K8SAI_ALERTS_ERROR_THRESHOLD=5